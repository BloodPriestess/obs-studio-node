{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "helpers/startup_shutdown.ts",
    "simple.ts",
    "startup.ts",
    "wrapper_startup.ts",
    "source_creation.ts",
    "scene_creation.ts",
    "scene_items.ts"
  ]
}