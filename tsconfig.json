{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "node-obs"
  ],
  "files": [
    "obs_node.ts",
    "build-obs.ts",
    "build-docs.ts",
    "build-bindings.ts"
  ]
}